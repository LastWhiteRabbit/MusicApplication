@model Album

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Album</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AlbumName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="AlbumLength"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="AlbumName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="AlbumLength" disabled class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 text-center" row>

                    <div class="col">
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </div>
                    <div class="col">
                        <input asp-controller="Album" asp-action="Index" type="submit" class="btn btn-success" value="Back" />
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
