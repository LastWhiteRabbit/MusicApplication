@model IEnumerable<Album>
<div class="container p-3"
     <div class="row pt-4"
          <div class=" col-6"
               <h2 class="text-primary"> Album list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Album" asp-action="Create" class="btn btn-primary">Create new Album</a>
        </div>
    </div>
    <br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
        <th>
            Album name
        </th>
        <th>
            Album length
        </th>


    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
        <td width="45%">@item.AlbumName</td>
        <td width="45%">@item.AlbumLength</td>
        <td width="10%">
        <div class="col-6 text-right">
        <a asp-controller="Album" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
        <a asp-controller="Album" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
        </div>
        </td>
        </tr>
    }
    </tbody>
    </table>
}
else
{
    <p>No items created yet</p>
}

</div>