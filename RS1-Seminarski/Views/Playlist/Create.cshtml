@model Playlist

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Track</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PlaylistName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="PlaylistSongNumber"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="PlaylistTrack"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="PlaylistName" class="form-control" />
                        <span asp-validation-for="PlaylistName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="PlaylistSongNumber" class="form-control" />
                    </div>
                    <div class="col-4">
                        <select asp-for="TrackId" asp-items="@ViewBag.TypeDropDown" class="form-control">
                            <option selected>Select Track</option>
                        </select>
                        <span asp-validation-for="TrackId" class="text-danger"></span>
                    </div>

                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 text-center" row>

                    <div class="col">
                        <input type="submit" class="btn btn-info" value="Create" />
                    </div>
                    <div class="col">
                        <input asp-controller="Playlist" asp-action="Index" type="submit" class="btn btn-danger" value="Back" />
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
