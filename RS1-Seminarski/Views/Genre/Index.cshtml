@model IEnumerable<Genre>
<div class="container p-3"
     <div class="row pt-4"
          <div class=" col-6"
               <h2 class="text-primary"> Genres</h2>
        </div>
        <div class="col-6 text-right">
             <a asp-controller="Genre" asp-action="Create" class="btn btn-primary">Create new Genre</a>
        </div>
    </div>
    <br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
    <th>
    Genre 
    </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td width="50%">@item.GenreName</td>
            <td width="10%">
                <div class="col-6 text-right">
                    <a asp-controller="Genre" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                    <a asp-controller="Genre" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
    </table>
}
else
{
    <p>No items created yet</p>
}

</div>