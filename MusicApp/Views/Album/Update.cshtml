@model Album

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Update Album</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AlbumName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="AlbumLength"></label>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="AlbumName" class="form-control" />
                        <span asp-validation-for="AlbumName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="AlbumLength" class="form-control" />
                    </div>

                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 text-center" row>

                    <div class="col">
                        <input type="submit" class="btn btn-info" value="Update" />
                    </div>
                    <div class="col">
                        <input asp-controller="Album" asp-action="Index" type="submit" class="btn btn-danger" value="Back" />
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
