@model Track

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Update Track</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TrackName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Length"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Genre"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="TrackName" class="form-control" />
                        <span asp-validation-for="TrackName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Length" class="form-control" />
                    </div>
                    <select asp-for="GenreId" asp-items="@ViewBag.TypeDropDown" class="form-control">
                        <option selected>Select Genre</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 text-center" row>

                    <div class="col">
                        <input type="submit" class="btn btn-info" value="Update" />
                    </div>
                    <div class="col">
                        <input asp-controller="Track" asp-action="Index" type="submit" class="btn btn-danger" value="Back" />
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>
