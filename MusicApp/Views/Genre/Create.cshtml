@model Genre

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add new Genre</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="GenreName"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="GenreName" class="form-control" />
                        <span asp-validation-for="GenreName" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 text-center" row>

                    <div class="col">
                        <input type="submit" class="btn btn-info" value="Create" />
                    </div>
                    <div class="col">
                        <input asp-controller="Genre" asp-action="Index" type="submit" class="btn btn-danger" value="Back" />
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

